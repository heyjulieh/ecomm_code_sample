<%= render "layouts/jumbotron" %>

<div class="container-fluid show wrapper">
  <div class="row">
    <div class="col col-sm-6 col-md-6 large-image-box">
      <%=image_tag @item.images[0]%>
    </div>
    <div class="col col-sm-6 col-md-6 show-item-info">
      <h3><%= @item.brand %> <span><%= @item.release_year %></span></h3>
      <h4><%= @item.colorway %> <%= @item.description %></h4><br />
      <h5><%= @item.size %></h5>
      <p>Condition: <%= @item.new_or_used %>, <%= @item.condition %></p>
      <p><%= @item.fit %></p>
      <p class="btn"><%= (current_user && current_user.purchase?(@item)) ? "Sold" : "$#{@item.price}" %></p><br />
      <%if signed_in?%>
        <%=link_to "", class: "btn-danger", data: {target: @cart_action, addUrl: add_to_cart_path(@item), removeUrl: remove_from_cart_path(@item)} do%>
          <i class="fa fa-shopping-cart"></i>
          <span><%=@cart_action%></span> Cart
        <%end%>
        <p class="label mb1">
          <%= (current_user && current_user.purchase?(@item)) ? "Sold" : "$#{@item.price}" %>
        </p>
      <%end%>
    </div>
  </div>
</div>
<%= render "layouts/footer" %>
