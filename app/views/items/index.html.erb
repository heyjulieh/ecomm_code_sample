<div class="container-fluid featured wrapper">
  <div class="row">
    <div class="col col-xs-12">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
    <h3 class="subsection">Latest Additions</h3>
    <% @latest.each do |item| %>
      <div class="col col-xs-6 col-sm-3">
        <div class="items">
          <div class="image-box">
            <%= link_to item, class: "item-images" do %>
              <%= image_tag item.images[0].url %>
            <% end %>
          </div>
          <%= link_to item  do %>
            <div class="item-info">
              <h5><%= item.brand %></span></h5>
              <p><%= item.product_name %></p>
              <p class="price">$ <%= item.price %></p>
              <h6><%= item.size %></h6>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "layouts/footer" %>
