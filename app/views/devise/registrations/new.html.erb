<%= render "layouts/jumbotron" %>

<div class="form container-fluid">
  <div class="col col-xs-1 col-sm-4 col-md-4">
  </div>
  <div class="col col-xs-10 col-sm-4 col-md-4">
    <h2>Sign up!</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="mb1"><%= f.text_field :first_name, autofocus: true, placeholder: "First Name", class: "radius" %></div>
      <div class="mb1"><%= f.text_field :last_name, autofocus: true, placeholder: "Last Name", class: "radius" %></div>
      <%= f.label :birthday %>: 
      <div class="date"><%= f.date_select :birthday, {order: [:month, :day, :year], prompt: { day: 'Day', month: 'Month', year: 'Year' }, start_year: Date.today.year - 18, end_year: Date.today.year - 100}, {required: true} %></div>
      <div class="mb1"><%= f.email_field :email, autofocus: true, placeholder: "Email", class: "radius" %></div>
      <div class="mb1"><%= f.text_field :phone, autofocus: true, placeholder: "Phone", class: "radius" %></div>
      <div class="mb1"><%= f.text_field :street_address, autofocus: true, placeholder: "Street Address", class: "radius" %></div>
      <div class="mb1"><%= f.text_field :city_address, autofocus: true, placeholder: "City", class: "radius" %></div>
      <div class="mb1"><%= f.text_field :state, autofocus: true, placeholder: "State", class: "radius" %></div>
      <div class="mb1"><%= f.text_field :zip_code, autofocus: true, placeholder: "Zip Code", class: "radius" %></div>
      <div class="mb1"><%= f.text_field :country, autofocus: true, placeholder: "Country", class: "radius" %></div>
      <div class="mb1"><%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "radius" %></div>
      <div class="mb1"><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password", class: "radius" %></div>

      <div><%= f.submit "Let's go!", class: "letsgo" %></div>
    <% end %>
    <div class="back">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="col col-xs-1 col-sm-4 col-md-4">
  </div>
</div>
