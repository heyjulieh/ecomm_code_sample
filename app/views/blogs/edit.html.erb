<%= render "layouts/jumbotron-blog" %>
<div class="new-blog container-fluid">
  <div class="col col-sm-2">
  </div>
  <div class="col col-sm-8">
    <h1>Edit Blog Post</h1>
    <%= render 'form', blog: @blog %>
